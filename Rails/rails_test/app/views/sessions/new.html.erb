<h1>Login & Registration</h1>
<h1>Login</h1>
<form action="/sessions" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <table>
        <tr>
            <td><label for="Email">Email:</label></td>
            <td><input id="Email" type="email" name="email"></td>
        </tr>
        <tr>
            <td><label for="Session_Password">Password:</label></td>
            <td><input id="Session_Password" type="password" name="password"></td>
        </tr>
    </table>
    <button type="submit">Login</button>
</form>
<% if flash[:messages] %>
    <% for msg in flash[:messages] %>
        <p><%= msg %></p>
    <% end %>
<% end %>
<div>
    <h1>Register</h1>
    <form action="/users" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <table>
            <tr>
                <td><label for="First_name">First Name:</label></td>
                <td><input id="First_name" type="text" name="user[first_name]"></td>
            </tr>
            <tr>
                <td><label for="Last_name">Last Name:</label></td>
                <td><input id="Last_name" type="text" name="user[last_name]"></td>
            </tr>
            <tr>
                <td><label for="Email">Email:</label></td>
                <td><input id="Email" type="email" name="user[email]"></td>
            </tr>
            <tr>
                <td><label for="User_Password">Password:</label></td>
                <td><input id="User_Password" type="password" name="user[password]"></td>
            </tr>
            <tr>
                <td><label for="Password_confirmation">Password Confirmation:</label></td>
                <td><input id="Password_confirmation" type="password" name="user[password_confirmation]"></td>
            </tr>
        </table>
        <button type="submit">Register</button>
    </form>
</div>